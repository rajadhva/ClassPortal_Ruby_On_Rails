<% provide(:title, 'Add Course') %>

<h1>Add Course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>
      <%#  <%= render 'shared/error_book_messages' %>
        <%= f.label :CourseNumber %>
        <%= f.text_field :CourseNumber, class: 'form-control' %>

        <%= f.label :Title %>
        <%= f.text_field :Title, class: 'form-control' %>

        <%= f.label :Description %>
        <%= f.text_field :Description, class: 'form-control' %>

        <%= f.label :Instructor %>
        <%= f.collection_select :Instructor, User.select{|u| u[:instructor]}, :id, :name, class: 'form-control' %>

        <%= f.label :Startdate %>
        <%= f.text_field :Startdate, class: 'form-control datepicker'%>

        <%= f.label :Enddate %>
        <%= f.text_field :Enddate, class: 'form-control datepicker'%>


        <%= f.submit "Add Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

