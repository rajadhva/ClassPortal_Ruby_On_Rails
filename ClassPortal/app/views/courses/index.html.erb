<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<table>
  <thead>
  <tr>
    <th>CourseNumber</th>
    <th>Title</th>
    <th>Description</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>References</th>
    <th>Status</th>
    <% if current_user.admin?%>
    <th>Delete Course</th>
    <% end %>
    <% if !current_user.student %>
    <th>Post Grades</th>
    <% end %>
  </tr>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.CourseNumber,course %></td>
        <td><%= course.Title %></td>
        <td><%= course.Description %></td>
        <td><%= course.Startdate %></td>
        <td><%= course.Enddate %></td>
        <td><%= link_to "Reference Material", course_references_path(course) %> </td>

        <td><%= course.Status %></td>
        <% if current_user.admin? %>
            <td>
              <% if course.Status=="Active" %>
                  <%= link_to "Delete", course,  method: :delete, data: { confirm: "Confirm?" } %>
              <% end %>
            </td>

        <% end %>
        <% if !current_user.student %>
            <td><%= link_to 'View Grades', :controller => 'enrollments', :action => 'show', :id =>course.id %></td>
      <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

