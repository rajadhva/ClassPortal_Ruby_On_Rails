<% provide(:title, 'Edit User') %>
<h1>Edit User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, :url => url_for(:controller => 'users', :action => 'update', :id=> current_user.id) do |f| %>
        <%#  <%= render 'shared/error_book_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.text_field :email ,:readonly => true, class: 'disabled_textbox' %>

        <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
