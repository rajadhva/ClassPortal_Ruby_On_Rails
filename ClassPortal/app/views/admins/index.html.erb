<% provide(:title, 'Admins') %>

<h1>NCSU Class Portal Admins</h1>
<center>
<table style="width:70%">
  <tr>
	<h5>
    	<th>User Name</th>
    	<th>Email</th>
    	<th>Role</th>
    	<th></th>
	</h5>
  </tr>

<ul class="users">
	<% @admins.each do |user| %>
	<% if user.admin or user.super %>
		
	<tr>
			
		<td>
		<%= link_to user.name, admins_show_path(:id=>user.id) %>
			<%# user.name %>
		</td>
		<td>
			<%= user.email %>
		</td>
		
		<% if user.admin and user.super %>
			<td> Super Admin </td>
		<% elsif user.admin %>
			<td> Admin </td>
		<%end%>
		<td> 
		
		<%if !user.super and user!=current_user %>
		<%= link_to "Delete", admins_path(:id=>user.id), method: :delete, data: { confirm: "Confirm?"} %>
		<%end%>
		</td>

	</tr>
	<% end %>
	<% end %>
</ul>
</table>
</center>
